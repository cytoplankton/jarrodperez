.pie {
    position: relative;
    display: inline-block;
    margin: 5px;

    .master,
    .slice,
    .inner {
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        border-radius: 100%;
    }
    .cover {
        background: #fff;
        position: absolute;
        top: 5px;
        left: 5px;
        bottom: 5px;
        right: 5px;
        border-radius: 100%;

        .content {
            text-transform: uppercase;
            text-align: center;
            font-size: 16px;
            position: absolute;
            width: 100%;
            top: 50%;
            margin-top: -10px;
        }
    }
}
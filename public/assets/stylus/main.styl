/*reset*/
@import '_reset';

/*variables*/
@import 'variables/variables';

/*partials*/
@import 'partials/partials';

/*pages*/
@import 'pages/pages';

body {

	header {
		position: fixed;
		z-index: 9999;
		width: 100%;

		.nav-container {
			padding: 10px;
			animation-delay: 0s;
			-webkit-animation-delay: 0s;
			
			.pie {
				opacity: 0.3;
				transition-duration: 0.3s;
				-webkit-transition-duration: 0.3s;

				.cover {
					.content {
						color: #fff;
						text-shadow: 1px 1px 1px #3b3b3b;
					}
				}
			}

			.pie:hover {
				opacity: 1;
			}
		}

		.menu {				
			display: none;
			color: #fff;
			position: fixed;
			padding: 20px;
			width: 100%;
			font-size: 1.5em;
			background: rgba(1,1,1,0.5);
			top: 0;
			bottom: 0;

			div {
				animation-delay: 0s;
				-webkit-animation-delay: 0s;
				margin-bottom: 30px;
			}

			div:last-child {
				margin-bottom: 0;
			}

			div.link {
				text-shadow: 1px 1px 1px #3b3b3b;
				font-size: 40px;

				&.about {
					animation-delay: .10s;
					-webkit-animation-delay: .10s;
				}

				&.skills {
					animation-delay: .20s;
					-webkit-animation-delay: .20s;
				}

				&.contact {
					animation-delay: .30s;
					-webkit-animation-delay: .30s;
				}

				a {
					text-decoration: none;
				}
			}

			i.close-menu {
				position: absolute;
				top: 20px;
				right: 20px;
			}

			i:hover {
				color: #60F2FF;
			}
		}
	}

	div.shade {
		display: none;
		position: fixed;
		top: 0;
		right: 0;
		bottom: 0;
		left: 0;
		z-index: 9998;
		background-color: rgba(0, 0, 0, 0.5);
		-webkit-animation: fade 500ms;
		-moz-animation: fade 500ms;
		-ms-animation: fade 500ms;
		-o-animation: fade 500ms;
		animation: fade 500ms;
	}
}

body.green .menu {
	.link:hover a { color: $green; }
	i:hover { color: $green; }
}
body.blue .menu {
	.link:hover a { color: $blue; }
	i:hover { color: $blue; }
}
body.red .menu {
	.link:hover a { color: $red; }
	i:hover { color: $red; }
}
body.pink .menu {
	.link:hover a { color: $pink; }
	i:hover { color: $pink; }
}

$linkHoverColor = #000;

body 
    font-family 'Source Sans Pro', sans-serif
    font-weight 300
    background url(../images/grid_noise.png);


h1, h2, h3, h4, h5, h6 {
    font-family: 'Source Sans Pro', sans-serif;
}
p, div {
    font-family: 'Source Sans Pro', sans-serif;
}

a:hover {
    color: $linkHoverColor;
}

.navbar-default {
    background-color: #fff;
    
    .navbar-brand:hover {
    }
    
    .navbar-nav > li > a:hover {
        color: $linkHoverColor;
    }
}

.dropdown-menu > li> a:hover {
    background: #000;
}

.container {
    .main {
        clear: both;
        min-height: 1000px;
        
        .jumbotron {
            background-color: #fff;
            padding-top: 20px;
            padding-bottom: 20px;
            margin: 70px 15px 30px 15px;
            border-radius: 0;
            
            .clock {
                margin: 20px 0px 0px 130px;
            }
        }
        
        .col {
    
            &.employment, &.education {
                .fa-angle-right {
                    font-size: 10px;
                }
            }
            
            &.employment {
                .job {
                    margin-bottom: 10px;
                    
                    .company {
                        color: #000;
                        position: relative;
                    }
                }
            }
            
            &.education {
                padding-top: 15px;
                
                .school {
                    color: #000;
                }
            }
            
            &.skills {
                padding-bottom: 15px;
                
                .skill-collection {
                    margin-bottom: 10px;
                    
                    .type {
                        color: #000;
                        text-transform: capitalize;
                    }
                    
                    .skill {
                        font-size: 13px; 
                    }
                    
                    .fa {
                        font-size: 16px;
                    }
                    
                    .fa-angle-right {
                        font-size: 10px;
                    }
                }
            }
            
            .content {
                background: #fff;
                padding: 10px;
                
                .title {
                    font-size: 22px;
                    margin-bottom: 10px;
                }
                
                .type, .company, .school {
                    font-size: 16px;
                }
                
                .years, .location {
                    position: absolute;
                    top: 3px;
                    right: 10px;
                    font-size: 11px;
                }
                
                .school, .company, .degree, .job-title {
                    position: relative;
                }
                
                .job-title, .degree, .major {
                    font-size: 14px;
                }
                
                .comments {
                    font-size: 13px;
                    padding: 1px 0px;
                    
                    &:last-child {
                        padding-bottom: 0px;
                    }
                }
            }
        }
    }
}

footer {
    background-color: rgba(81,81,81,0.6);
    color: #444 ;
    font-size: 12px;
    padding: 40px 0px;
    margin-top: 20px;
    text-shadow: 0 1px 0 rgba(0,0,0,0.15);
    
    span {
        color: #fff;
    }
    
    a {
        color: #fff;
    }
    
    a:hover {
        text-decoration: none;
    }
    
    a.linkedin:hover i {
        color: #4875B4;
    }
    
    a.facebook:hover i {
        color: #3B5998;
    }
    
    a.github:hover i {
        color: #79d858;
    }
    
    a.twitter:hover i {
        color: #33CCFF;
    }
    
    i {
        font-size: 20px;
        margin-right: 8px;
    }
}
/*reset*/
@import '_reset';

/*variables*/
@import 'variables/variables';

/*partials*/
@import 'partials/partials';

/*pages*/
@import 'pages/pages';

body {
	header {
		position: fixed;
		z-index: 2;
		left: 20px;
		top: 20px;

		div {
			animation-delay: 2s;
			-webkit-animation-delay: 2s;
			
			.pie {
				transition-duration: 0.3s;
				-webkit-transition-duration: 0.3s;

				.master {
					border-color: rgba(1,1,1,0.1);
				}

				.cover {
					.content {
						color: #fff;
						text-shadow: 1px 1px 1px #3b3b3b;
					}
				}
			}

			.menu {				
				display: none;
				color: #fff;
				position: absolute;
				top: 7px;
				right: 0px;

				div {
					animation-delay: 0s;
					-webkit-animation-delay: 0s;
					margin-bottom: 10px;
				}

				div:hover {
					a{
						color: #60F2FF;
						cursor: default;
						text-decoration: none;
					}
				}

				div.link {
					text-shadow: 1px 1px 1px #3b3b3b;

					&.about {
						animation-delay: .10s;
						-webkit-animation-delay: .10s;
					}

					&.skills {
						animation-delay: .20s;
						-webkit-animation-delay: .20s;
					}

					&.contact {
						animation-delay: .30s;
						-webkit-animation-delay: .30s;
					}
				}
			}
		}

		div:hover { 
			.pie {
				transform: translateX(75px);
				-webkit-transform: translateX(75px);
			}

			.menu {
				display: block;
				width: 100%;
				height: 95px;
			}
		}
	}
}
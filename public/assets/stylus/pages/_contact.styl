#contact {
	background: #363636;
	color: #9c9c9c;
	padding: 100px 0px;

	.container {
		text-align: center;

		h1 {
			font-size: 1.8em;
			margin-bottom: 45px;
			letter-spacing: 0.1em;
			text-transform: uppercase;
		}

		.icons {
			font-size: 2em;

			ul {
				list-style: none;

				li {
					padding: 0px 30px;
					display: inline;

					a {
						color: inherit;
						text-decoration: none;
					}
				}
			}
		}

		.copyright {
			font-size: .8em;
			margin-top: 45px;
		}
	}
}

body.green #contact .icons li:hover a { color: $green; }
body.blue #contact .icons li:hover a { color: $blue; }
body.red #contact .icons li:hover a { color: $red; }
body.pink #contact .icons li:hover a { color: $pink; }
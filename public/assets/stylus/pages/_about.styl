#about {
	background: whitesmoke;
	padding: 100px 0px;

	.container {
		text-align: center;

		img {
			vertical-align: middle;
			height: 200px;
			margin-bottom: 45px;
			border-radius: 150px;
			border: 4px solid #3a3a3a;
		}

		h1 {
			font-size: 1.8em;
			margin-bottom: 45px;
			letter-spacing: 0.1em;
			text-transform: uppercase;
		}

		p {
			color: #666666;
			margin: 0 auto;
			font-size: 1.4em;
			letter-spacing: 0.04em;
			line-height: 1.7em;
			font-weight: 300;
		}
	}
}